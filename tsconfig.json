{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext"],
      "jsx": "react-jsx",
      "isolatedModules": true,
      "module": "ESNext",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": false,
      "outDir": "lib",
      "newLine": "LF",
      "emitDeclarationOnly": true,
      "declaration": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "pretty": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": ["node_modules"]
  }
  