{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM", "DOM.Iterable"],
      "moduleResolution": "node",
      "outDir": "lib",
      "newLine": "LF",
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": false,
      "declaration": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }
